<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:local="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">
	<ImageView
        android:id="@+id/image"
        android:layout_width="120dp"
        android:layout_height="182dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/book_cover"
        local:layout_constraintStart_toStartOf="parent"
        local:layout_constraintTop_toTopOf="parent"
        local:layout_constraintEnd_toEndOf="parent"
        local:layout_constraintBottom_toBottomOf="parent"
        local:MvxBind="Url ImageUri"/>
    <TextView
        android:id="@+id/lblName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingEnd="20dp"
        android:maxLines="7"
        android:textSize="12dp"
        android:fontFamily="sans-serif-medium"
        android:ellipsize="end"
        android:gravity="center"
        local:layout_constraintVertical_weight="0.6"
        local:layout_constraintStart_toStartOf="@id/image"
        local:layout_constraintTop_toTopOf="@id/image"
        local:layout_constraintEnd_toEndOf="@id/image"
        local:layout_constraintBottom_toTopOf="@id/lblAuthor"
        local:MvxBind="Text Title; Visibility ShowLabel"/>
    <TextView
        android:id="@+id/lblAuthor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="20dp"
        android:paddingTop="8dp"
        android:paddingEnd="20dp"
        android:paddingBottom="8dp"
        android:gravity="bottom"
        android:textSize="12dp"
        android:maxLines="4"
        android:ellipsize="end"
        local:layout_constraintVertical_weight="0.4"
        local:layout_constraintStart_toStartOf="@id/image"
        local:layout_constraintTop_toBottomOf="@id/lblName"
        local:layout_constraintEnd_toEndOf="@id/image"
        local:layout_constraintBottom_toBottomOf="parent"
        local:MvxBind="Text Author.Name; Visibility ShowLabel"/>
</android.support.constraint.ConstraintLayout>